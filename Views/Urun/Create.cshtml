@model UrunCreateModel
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Ürün Ekle</h5>
                <a asp-asp-controller="Urun" asp-action="Index" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
            @* Formdaki tüm validation hataları bir liste (liste maddeleri - <ul><li>) halinde toplu halde gösterir. *@
            <div asp-validation-summary="All" class="text-danger"></div>
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label asp-for="UrunAdi" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UrunAdi" class="form-control">
                            @* Sadece belirttiğin alanla ilgili olan validation hatayı gösterir. *@
                            <span  asp-validation-for="UrunAdi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Fiyat" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Fiyat" class="form-control">
                            <span  asp-validation-for="Fiyat" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aktif" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Aktif" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Anasayfa" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Anasayfa" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Resim" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Resim" class="form-control">
                            <span  asp-validation-for="Resim" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">

                        @* Seçiniz Opsiyonu: asp-items kullandığınızda, HTML içine manuel yazdığınız <option> en üstte görünür,
                        ardından veritabanından gelenler sıralanır.
                            Validation: Eğer modelinizde KategoriId alanı [Required] olarak işaretlenmişse, 
                        kullanıcı "Seçiniz" modunda formu gönderirse asp-validation-for devreye girer.
                            Hata Önleme: SelectList içindeki "Id" ve "KategoriAdi" ifadeleri, 
                        veritabanı tablonuzdaki kolon isimleriyle birebir aynı (büyük-küçük harf duyarlı olabilir) olmalıdır. *@
                        <label asp-for="KategoriId" class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-10">
                            <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.Kategoriler">
                                <option value="" selected>Seçiniz</option>
                                <span  asp-validation-for="KategoriId" class="text-danger"></span>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}